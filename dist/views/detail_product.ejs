<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('snippets/head'); -%>
  <title>Producto <%= data.product_title %></title>
</head>

<body>
  <%- include('snippets/header'); -%>

  <div class="obj-canvas obj-canvas-space">

    <div class="cmp-detail">
      <figure class="cmp-detail__mask">
        <img class="img-product" src="../static/img/product.jpeg" alt="">
      </figure>
      <div class="cmp-detail__content">
        <h1> <%= data.product_title %> </h1>
        <p> <%= data.product_description %> </p>
        <ul>
          <li>Categoria:  <strong><%= categoryProduct %></strong></li>
          <li>Precio: <strong><%= data.product_price %></strong></li>
          <% if (sumQualification) { %>
            <li>Puntos totales: <strong><%= sumQualification %></strong></li>
          <% } %>
        </ul>
      </div>

    </div>


    <% if (login) { %>
      <a
        class="obj-btn obj-btn_outline"
        href="/form_review/<%= data.product_id %>"
      >
        Crear una reseña
      </a>
    <% } %>

    <h2 class="obj-subtitle obj-subtitle_space">Reseñas de usuarios</h2>

    <div class="cmp-rta">
      <% for( let i = 0; i < reviewProduct.length; i++ ) { %>
      <article class="cmp-rta__item">
        <h3 class="cmp-rta__title">
          <span>0<%= i + 1 %> </span>
          <%= reviewProduct[i].review_title %>
        </h3>
        <strong class="cmp-rta__text">PUNTOS: <%= reviewProduct[i].review_qualification %> </strong>
        <p class="cmp-rta__text"><%= reviewProduct[i].review_description %></p>

        <a class="cmp-rta__action" href="/list_request/<%= reviewProduct[i].review_id %>">Ver respuestas de esta reseña</a>
      </article>
      <% } %>
    </div>
  </div>

</body>

</html>